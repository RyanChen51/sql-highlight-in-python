{
  "fileTypes": [],
  "injectionSelector": "L:source.python",
  "patterns": [
    {
      "include": "#sql-code-block-with-markers"
    },
    {
      "include": "#sql-code-block-auto-detect"
    }
  ],
  "repository": {
    "sql-code-block-with-markers": {
      "patterns": [
        {
          "begin": "([\"']{3})\\s*(?:--\\s*(?:sql))",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.string.begin.python"
            }
          },
          "end": "\\s*(?:--|;)\\s*(?:endsql|end-sql)?\\s*\\n.*?([\"']{3})",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.string.end.python"
            }
          },
          "contentName": "source.sql",
          "patterns": [
            {
              "include": "source.sql"
            }
          ]
        }
      ]
    },
    "sql-code-block-auto-detect": {
      "patterns": [
        {
          "begin": "(?:f)?([\"']{3})",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.string.begin.python"
            }
          },
          "end": "([\"']{3})",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.string.end.python"
            }
          },
          "contentName": "source.sql",
          "patterns": [
            {
              "include": "source.sql"
            }
          ]
        },
        {
          "begin": "(?i)(?:^|\\s)(?:[a-zA-Z_][a-zA-Z0-9_]*)\\s*(?:=|\\+=)\\s*(?:f)?([\"']{3})\\s*(?=[\\s\\r\\n]*(?i)(?:SELECT|INSERT|UPDATE|DELETE|CREATE|ALTER|DROP|TRUNCATE|GRANT|REVOKE|COMMIT|ROLLBACK|BEGIN|WITH|MERGE|REPLACE|UNION|FROM|WHERE|GROUP|ORDER|HAVING)\\b)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.string.begin.python"
            }
          },
          "end": "([\"']{3})",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.string.end.python"
            }
          },
          "contentName": "source.sql",
          "patterns": [
            {
              "include": "source.sql"
            }
          ]
        }
      ]
    }
  },
  "scopeName": "inline.sql.python"
}
